---
import BaseHead from "../components/BaseHead.astro";
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
    <BaseHead title={title}>
    </head>

    <body>
        <div class="container">
            <div class="columns">
                <Sidebar />
                <slot />
            </div>
            <Footer />
        </div>
    </body>
</html>
