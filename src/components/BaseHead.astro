---
import '../styles/base.css';
import favicon from '../../public/cat-face.png';

export interface Props {
	title: string;
    description?: string;
	previewTitle?: string;
}

const { title } = Astro.props.frontmatter || Astro.props;
const previewTitle = Astro.props.previewTitle || title;
let { description } = Astro.props.frontmatter || Astro.props;

if (description === undefined) {
    description = "Angelo Fallaria's personal website, focused on programming and Linux.";
}

let image = "/public/og-preview.png";

---

<meta charset="UTF-8">
<title>Angelo Fallaria - {title}</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="icon" type="image/png" href={favicon}>

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={previewTitle} />
<meta property="og:description" content={description} />
<meta property="og:image" content={new URL(image, Astro.url)} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={previewTitle} />
<meta property="twitter:description" content={description} />
<meta property="twitter:image" content={new URL(image, Astro.url)} />
