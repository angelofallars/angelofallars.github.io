---
import BaseHead from "../components/BaseHead.astro";
import Sidebar from '../components/Sidebar.astro';
import Footer from '../components/Footer.astro';

export interface Props {
	title: string;
	description?: string;
	previewTitle?: string;
}

const { title, description, previewTitle } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <BaseHead title={title} description={description} previewTitle={previewTitle}>
    </head>

    <body>
        <div class="container">
            <div class="columns">
                <Sidebar />
                <slot />
            </div>
            <Footer />
        </div>
    </body>
</html>
